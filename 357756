//Leer un archivo
#include <stdio.h>
int main(int argc,char *argv[]){
    if (argc != 2) {
        printf("Uso: %s <nombre_de_archivo>\n",argv[0]);
        return 1;
    }
    char *nombre_archivo=argv[1];
    FILE *archivo=fopen(nombre_archivo, "r");
    if (archivo == NULL){
        printf("No se puede abrir el archivo indicado %s\n",nombre_archivo);
        return 1;
    }
    int caract;
    while((caract=fgetc(archivo))!=EOF){
        putchar(caract);
    }
    fclose(archivo);
    return 0;
}
